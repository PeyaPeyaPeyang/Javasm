<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>tokyo.peya.plugin.Javasm</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>Javasm</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://www.peya.tokyo/">Peyang</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et
        dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea
        commodo consequat.
    </description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType implementationClass="tokyo.peya.javasm.intellij.langjal.filetype.JALFileType"
                  name="Java Assembly Language File"
                  extensions="jal"
                  fieldName="INSTANCE"
                  language="JAL"/>
        <lang.parserDefinition language="JAL"
                               implementationClass="tokyo.peya.javasm.intellij.langjal.parser.JALParserDefinition"/>
        <runLineMarkerContributor language="JAL"
                                  implementationClass="tokyo.peya.javasm.intellij.execution.JALRunLineMarkerProvider"/>
        <runConfigurationProducer implementation="tokyo.peya.javasm.intellij.execution.JALRunConfigurationProducer"/>
        <compiler.buildTargetScopeProvider
                implementation="tokyo.peya.javasm.intellij.execution.JALBuildTargetScopeProvider"/>
        <compileServer.plugin
                classpath="javasm-jps-plugin-0.0.1.jar;javasm-compiler-0.0.1.jar;antlr4-runtime-4.13.2.jar;icu4j-72.1.jar;org.abego.treelayout.core-1.0.3.jar;ST4-4.3.4.jar;asm-9.8.jar;asm-commons-9.8.jar;asm-util-9.8.jar;asm-tree-9.8.jar;asm-analysis-9.8.jar;"/>
        <lang.ast.factory language="JAL" implementationClass="tokyo.peya.javasm.intellij.langjal.parser.JALASTFactory"/>
        <lang.psiStructureViewFactory language="JAL"
                                      implementationClass="tokyo.peya.javasm.intellij.langjal.structureview.JALStructureViewFactory"/>
        <lang.syntaxHighlighterFactory
                language="JAL"
                implementationClass="tokyo.peya.javasm.intellij.langjal.highlighting.JALSyntaxHighlighterFactory"/>
        <colorSettingsPage
                implementation="tokyo.peya.javasm.intellij.langjal.highlighting.JALGeneralColorSettingsPage"/>
        <additionalTextAttributes scheme="Default" file="colorSchemes/JALDefault.xml"/>
        <additionalTextAttributes scheme="Darcula" file="colorSchemes/JALDarcula.xml"/>
        <annotator language="JAL"
                   implementationClass="tokyo.peya.javasm.intellij.langjal.highlighting.JSLSyntaxHighlightAnnotator"/>
        <internalFileTemplate name="JAL Class"/>
        <completion.contributor
                language="JAL"
                implementationClass="tokyo.peya.javasm.intellij.langjal.completion.JALCompletionContributor"/>
        <lang.formatter language="JAL"
                        implementationClass="tokyo.peya.javasm.intellij.langjal.formatting.JALFormattingModelBuilder"/>
        <codeStyleSettingsProvider
                implementation="tokyo.peya.javasm.intellij.langjal.formatting.JALCodeStyleSettingsProvider"/>
        <langCodeStyleSettingsProvider
                implementation="tokyo.peya.javasm.intellij.langjal.formatting.JALLanguageCodeStyleSettingsProvider"/>
        <localInspection
                implementationClass="tokyo.peya.javasm.intellij.langjal.inspection.inspections.JALClassfileNameInspection"
                         language="JAL"
                         displayName="Class name inspection"
                         enabledByDefault="true"
                         level="GENERIC_ERROR"
                         groupName="JAL Inspections"/>
        <localInspection
                implementationClass="tokyo.peya.javasm.intellij.langjal.inspection.inspections.JALPushIntegerInspection"
                         language="JAL"
                         displayName="Push integer inspection"
                         enabledByDefault="true"
                         level="WARNING"
                         groupName="JAL Inspections"/>
    </extensions>
    <actions>
        <action id="tokyo.peya.javasm.intellij.langjal.JALCreateFileFromTemplateAction"
                class="tokyo.peya.javasm.intellij.langjal.JALCreateFileFromTemplateAction" text="Create JAL Class"
                description="Creating new JAL class file.">
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
